@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a class="btn btn-primary" href="/Students/Create">Create New</a>
</p>

@* Search box *@
<div class="row mb-3">
    <div class="col-md-4">
        <input id="search" class="form-control" placeholder="Search a student..." onkeyup="loadStudents()"/>
    </div>
</div>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>First name</th>
            <th>Last name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Department</th>
            <th></th>
        </tr>
    </thead>

    <tbody id="entityTable">
        @*Here AJAX will display the info*@
    </tbody>
</table>


@section Scripts {
<script>
    $(document).ready(function () {
        loadStudents();
    });

    function loadStudents() {
        let filter = $("#search").val();

        $.get(`${studentAPI}/GetAll`, { filter: filter }, function (entities) {
                let rows = "";

                entities.forEach((entity, i) => {
                    let entityColumnId = `student${i}`;
                    rows += `
                    <tr>
                        <td>${entity.firstName}</td>
                        <td>${entity.lastName}</td>
                        <td>${entity.email}</td>
                        <td>${entity.phone}</td>
                        <td id="${entityColumnId}"></td>
                        <td>
                            <a href="/Students/Details/${entity.id}" class="btn btn-info">Details</a> |
                            <a href="/Students/Edit/${entity.id}" class="btn btn-warning">Edit</a> |
                            <a href="/Students/Delete/${entity.id}" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>`;
                });

                $("#entityTable").html(rows);

                entities.forEach((entity, i) => {
                    let entityColumnId = `student${i}`;

                    $.get(`${departmentAPI}/Get/${entity.departmentId}`, function (deptEntity) {
                        $(`#${entityColumnId}`).html(deptEntity.deptName);
                    });
                });
            }
        );
    }
</script>
}