@model DepartmentViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Department</h4>
    <hr />

    <dl class="row">
        <dt class="col-sm-2">Dept. name</dt>
        <dd class="col-sm-10" id="deptName"></dd>

        <dt class="col-sm-2">Faculty head</dt>
        <dd class="col-sm-10" id="facultyHead"></dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10" id="email"></dd>
    </dl>
</div>

<a asp-action="Index" class="btn btn-secondary">Back to List</a>

@section Scripts {
<script>
    $(document).ready(function () {
        loadDetails(@Model.Id);
    });

    function loadDetails(id) {
        $.get(`${departmentAPI}/Get/${id}`, function (entity) {
            $("#deptName").text(entity.deptName);
            $("#facultyHead").text(entity.facultyHead);
            $("#email").text(entity.email);
        });
    }
</script>
}