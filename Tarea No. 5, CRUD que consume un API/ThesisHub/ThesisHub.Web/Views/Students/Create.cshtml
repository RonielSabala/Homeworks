@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Student</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label class="control-label">First name</label>
            <input class="form-control" id="firstName" />
        </div>

        <div class="form-group">
            <label class="control-label">Last name</label>
            <input class="form-control" id="lastName" />
        </div>

        <div class="form-group">
            <label class="control-label">Email</label>
            <input class="form-control" id="email" />
        </div>

        <div class="form-group">
            <label class="control-label">Phone</label>
            <input class="form-control" id="phone" />
        </div>

        <div class="form-group">
            <label class="control-label">Department id</label>
            <input class="form-control" id="departmentId" />
        </div>

        @* Create button *@
        <div class="form-group">
            <button onclick="saveStudent()" class="btn btn-primary">Create</button>
        </div>
        
    </div>
</div>

@section Scripts {
<script>
    API = "https://localhost:7149/Students";

    function saveStudent() {
        let entity = {
            firstName: $("#firstName").val(),
            lastName: $("#lastName").val(),
            email: $("#email").val(),
            phone: $("#phone").val(),
            departmentId: $("#departmentId").val()
        };

        $.ajax({
            url: `${API}/Add`,
            type: "POST",
            contentType: "application/json",
            data: JSON.stringify(entity),
            success: function (response) {
                if (response.success) {
                    window.location.href = "/Students/Index";
                } else {
                    alert("Error: " + response.message);
                }
            }
        });
    }
</script>
}
